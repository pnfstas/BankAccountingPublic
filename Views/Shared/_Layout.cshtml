                                </ul>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <div>
                            <span>&#xE115</span>
                            <a href="Home/Settings">Settings</a>
                        </div>
                    </li>
                    <li>
                        <div>
                            <span>&#xE13D</span>
                            <a href="#">@((await userManager.FindByNameAsync(User?.Identity?.Name))?.FullName)</a>
                        </div>
                        <ul class="main-submenu-list">
                            <li>
                                <a href="UserAccount/EditProfile">Edit profile</a>
                            </li>
                            <li>
                                <a href="UserAccount/LogOut">Log out</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </nav>
        }
        <h3>
            @ViewBag.Title
        </h3>
        <div>
            @RenderBody()
        </div>
        <footer>@RenderSection("Footer", false)</footer>
        @RenderSection("Scripts", false);
    </body>
</html>
